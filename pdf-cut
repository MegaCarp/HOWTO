
    #!/bin/bash
    # Ask the user for their name
    echo название файла без разрешения?
    read varname

mkdir $varname && pdftoppm -jpeg -r 300 $varname.pdf $varname/img && tar -zvcf $varname.tar.gz $varname && thunderbird --compose
